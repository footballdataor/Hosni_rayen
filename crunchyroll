            if (accounts.length === 0) {
                document.getElementById("accountInfo").innerHTML = "";
                document.getElementById("takeAccountBtn").style.display = "none";
                document.getElementById("noMoreAccounts").classList.remove("hidden");
                return;
            }

            const account = accounts.pop();
            document.getElementById("accountInfo").innerHTML = `
                📧 <strong>Email:</strong> ${account.email}<br>
                🔑 <strong>Password:</strong> ${account.password}<br>
                📜 <strong>Plan:</strong> ${account.plan}<br>
                🌍 <strong>Country:</strong> ${account.country}<br>
                ⏳ <strong>Days Left:</strong> ${account.daysLeft} يومًا<br>
                ⚙️ <strong>Configured By:</strong> Hosni_Rayen
            `;

            hasTakenAccount = true; // منع المستخدم من أخذ حساب آخر
        }

