        let hasTakenAccount = false; // هل أخذ المستخدم حسابًا؟

        function showAccount() {
            if (hasTakenAccount) {
                alert("❌ لا يمكنك أخذ أكثر من حساب! \n 🚫 هذا مرفوض من قِبل Hosni_Rayen 🚫");
                return;
